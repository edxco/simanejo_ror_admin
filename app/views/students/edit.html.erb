<%= render 'layouts/navigation' %>
<section class="body-font mt-14">
  <div class="md:w-3/4 xl:w-1/2 w-full mx-auto my-7 text-right">
    <%= link_to "Registrar nuevo estudiante", students_new_path, class: "ml-5 bg-gray-300 pt-2 pb-3 px-3 border border-gray-400 rounded-md shadow-sm text-base leading-4 font-semibold hover:bg-blue-900 hover:text-white focus:outline-none" %>
  </div>
  <div class="shadow sm:rounded-md sm:overflow-hidden md:w-3/4 xl:w-1/2 w-full mx-auto bg-white pt-10">

    <h1 class="subpixel-antialiased font-semibold text-simanejo text-2xl mb-10 px-14">
      Editar estudiante
      <span class="text-white bg-simanejo px-3">
        <%= @student.student_name %> <%= @student.last_name %>
      </span>
    </h1>

    <%= render 'form' %>

  </div>
  <div class="md:w-3/4 xl:w-1/2 w-full mx-auto my-7 text-left">
    <%= link_to(students_path, class: "text-indigo-600 font-semibold text-lg hover:text-blue-900 inline") do %>
    <span aria-hidden="true">&larr; </span>
    Regresar a listado de <span class="font-bold">estudiantes</span>
    <% end %>
  </div>


</section>